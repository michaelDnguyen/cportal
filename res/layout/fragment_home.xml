<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.dlvn.mcustomerportal.afragment.HomeFragment" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical" >

            <!-- Layout header home by Customer template Outsystem -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/red"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imvProfile"
                        android:layout_width="@dimen/profile_width"
                        android:layout_height="@dimen/profile_height"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/avatar_user" />

                    <TextView
                        android:id="@+id/tvWelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Chào mừng Nguyen Van Nam"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lloHopDong"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="160dp"
                    android:background="@drawable/st_bg_page_home"
                    android:orientation="vertical" >

                    <com.dlvn.mcustomerportal.view.indicator.ScrollerViewPager
                        android:id="@+id/view_pager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1" />

                    <!--
                         <com.dlvn.mcustomerportal.view.indicator.SpringIndicator
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/indicator"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        app:siIndicatorColor="@color/colorPrimary"
                        app:siIndicatorColors="@array/indicator_colors"
                        app:siSelectedTextColor="@android:color/white"
                        app:siTextColor="@color/colorPrimaryDark"
                        app:siTextSize="10sp" />   -->

                    <com.dlvn.mcustomerportal.view.indicator.CirclePageIndicator
                        android:id="@+id/indicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        app:centered="true" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Layout header home origin -->

            <ImageView
                android:id="@+id/imv_ads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <!-- layout quảng cáo CTBH -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:padding="10dp" >

                <!-- QC1 -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/st_bg_layout"
                    android:elevation="3dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.3"
                        android:background="@drawable/img_dai_ichi_life"
                        android:backgroundTintMode="multiply" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:capitalize="sentences"
                        android:text="PHÍ ĐỊNH KỲ TỪ 499,000/THÁNG"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/textsize12"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="40dp"
                        android:capitalize="sentences"
                        android:text="GÓI AN NHÀN HƯU TRÍ"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/textsize16"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="60dp"
                        android:capitalize="sentences"
                        android:text="Hãy đăng ký ngay hôm nay. Hỗ trợ tự động đóng phí qua thẻ."
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/textsize12" />
                </RelativeLayout>

                <!-- QC2 -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/st_bg_layout"
                    android:elevation="3dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.3"
                        android:background="@drawable/phieu_kiem_tra_y_te"
                        android:backgroundTintMode="multiply" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:capitalize="sentences"
                        android:text="CHỈ TỪ 199,000 ĐẾN 399,000 HÀNG THÁNG"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/textsize12"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="40dp"
                        android:capitalize="sentences"
                        android:text="GÓI CHĂM SÓC SỨC KHỎE Y TẾ"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/textsize16"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="60dp"
                        android:capitalize="sentences"
                        android:text="Chăm sóc sức khỏe của bạn mỗi ngày.Phòng ngừa mọi nguy cơ bệnh tật."
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/textsize12" />
                </RelativeLayout>
            </LinearLayout>

            <!-- layout transaction -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/st_bg_page_home"
                android:orientation="vertical"
                android:padding="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ico_transaction" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/red"
                        android:text="Lịch sử giao dịch" />
                </LinearLayout>

                <!-- list item -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <!-- item 1 -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:layout_height="50dp" >

                        <ImageView
                            android:id="@+id/imvIcoTrans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:padding="3dp"
                            android:background="@drawable/st_bg_white_border_noradius"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ico_transaction" />

                        <TextView
                            android:id="@+id/tvTransMaGiaoDich"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@id/imvIcoTrans"
                            android:text="Mã giao dịch 34213"
                            android:textColor="@color/red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvTransMaGiaoDich"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@id/imvIcoTrans"
                            android:text="Mua thẻ cào 50.0 điểm." />

                        <ImageView
                            android:id="@+id/imvIcoTrans2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="3dp"
                            android:src="@drawable/ico_arrow_right" />
                    </RelativeLayout>
                    
                    <!-- item 2 -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:layout_height="50dp" >

                        <ImageView
                            android:id="@+id/imv2IcoTrans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/st_bg_white_border_noradius"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ico_transaction" />

                        <TextView
                            android:id="@+id/tv2TransMaGiaoDich"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@id/imv2IcoTrans"
                            android:text="Mã giao dịch 65894"
                            android:textColor="@color/red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv2TransMaGiaoDich"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@id/imv2IcoTrans"
                            android:text="Đổi phiếu khám chữa bênh 100.0 điểm" />

                        <ImageView
                            android:id="@+id/imv2IcoTrans2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="3dp"
                            android:src="@drawable/ico_arrow_right" />
                    </RelativeLayout>
                    
                    <!-- item 3 -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:layout_height="50dp" >

                        <ImageView
                            android:id="@+id/imv3IcoTrans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/st_bg_white_border_noradius"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ico_transaction" />

                        <TextView
                            android:id="@+id/tv3TransMaGiaoDich"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@id/imv3IcoTrans"
                            android:text="Mã giao dịch 245876"
                            android:textColor="@color/red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv3TransMaGiaoDich"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@id/imv3IcoTrans"
                            android:text="Đổi phiếu mua hàng siêu thị 200.0 điểm" />

                        <ImageView
                            android:id="@+id/imv3IcoTrans2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="3dp"
                            android:src="@drawable/ico_arrow_right" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>